{
  "name": "electron-react-parcel-boilerplate",
  "version": "0.1.3",
  "description": "A boilerplate for Electron + React + Parcel.",
  "main": "app/main/main.ts",
  "scripts": {
    "start": "concurrently --kill-others \"yarn parcel\" \"yarn electron\"",
    "dist": "yarn parcel:build && build --dir --x64 --publish=never",
    "electron": "electron .",
    "parcel":
      "parcel app/renderer/index.html -p 1124 -d app/renderer/.parcel/development",
    "parcel:build":
      "parcel build app/renderer/index.html --public-url ./ -d app/renderer/.parcel/production --target=electron",
    "lint": "tslint app/**/*.ts{,x}"
  },
  "author": "shamofu",
  "license": "MIT",
  "build": {
    "files": [
      "app/**",
      "!app/main/tests/**",
      "!app/renderer/**",
      "app/renderer/.parcel/production/**"
    ]
  },
  "devDependencies": {
    "@types/react": "^16.0.40",
    "@types/react-dom": "^16.0.4",
    "@types/react-router-dom": "^4.2.4",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "concurrently": "^3.5.1",
    "electron": "^1.8.3",
    "electron-builder": "^20.4.1",
    "parcel-bundler": "^1.6.2",
    "tslint": "^5.9.1",
    "tslint-react": "^3.5.1",
    "typescript": "^2.7.2"
  },
  "dependencies": {
    "antd": "^3.3.0",
    "app-root-path": "^2.0.1",
    "electron-is-dev": "^0.3.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-router-dom": "^4.2.2"
  }
}
