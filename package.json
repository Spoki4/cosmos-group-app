{
  "name": "electron-react-parcel-boilerplate",
  "version": "0.1.3",
  "description": "A boilerplate for Electron + React + Parcel.",
  "main": "app/main/main.ts",
  "scripts": {
    "start": "node server.js",
    "start-app": "concurrently --kill-others \"yarn parcel\" \"yarn electron\"",
    "dist": "yarn parcel:build && build --dir --x64 --publish=never",
    "electron": "electron .",
    "parcel":
      "parcel app/renderer/index.html -p 1124 -d app/renderer/.parcel/development",
    "parcel:build":
      "parcel build app/renderer/index.html --public-url ./ -d app/renderer/.parcel/production --target=electron",
    "lint": "tslint app/**/*.ts{,x}",
    "heroku-postbuild":
      "parcel build app/renderer/index.html --public-url ./ -d app/renderer/.parcel/production"
  },
  "author": "shamofu",
  "license": "MIT",
  "build": {
    "files": [
      "app/**",
      "!app/main/tests/**",
      "!app/renderer/**",
      "app/renderer/.parcel/production/**"
    ]
  },
  "prettier": {
    "semi": false
  },
  "devDependencies": {
    "@types/react": "^16.0.40",
    "@types/react-dom": "^16.0.4",
    "@types/react-redux": "^5.0.15",
    "@types/react-router-dom": "^4.2.5",
    "@types/yup": "^0.24.1",
    "babel-plugin-import": "^1.6.7",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "concurrently": "^3.5.1",
    "electron": "^1.8.4",
    "electron-builder": "^20.5.1",
    "parcel-bundler": "^1.6.2",
    "tslint": "^5.9.1",
    "tslint-react": "^3.5.1",
    "typescript": "^2.7.2"
  },
  "dependencies": {
    "antd": "^3.3.0",
    "app-root-path": "^2.0.1",
    "electron-is-dev": "^0.3.0",
    "express": "^4.16.3",
    "formik": "^0.11.11",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.2.2",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0",
    "styled-components": "^3.2.3",
    "yup": "^0.24.1"
  }
}
